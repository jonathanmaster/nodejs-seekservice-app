<div class="row m-5 ">
  <div class="col-md-4 mx-auto ">
    <div class="card card-register">
      <div class="card-header  text-light">
        <h1 class="h2 text-center">
          Regístrate
        </h1>
      </div>
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control p-md-3 bg-light" name="name" placeholder="Nombre" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control p-md-3 bg-light" name="email" placeholder="Correo" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control p-md-3 bg-light" name="password" placeholder="Contraseña" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control p-md-3 bg-light" name="confirm_password" placeholder="Confirme Contraseña" value="{{confirm_password}}">
          </div>
          <button class="btn bg-sesion btn-block">
            Resgistrarse 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
