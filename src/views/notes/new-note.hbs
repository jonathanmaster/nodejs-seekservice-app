<div class="col-md-4 m-5 mx-auto ">
  <div class="card text-center bg-sgnin p-4">
    <div class="card-header">
      <h3 class="text-light">Nuevo Servicio</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
          <input type="text" name="title" class="form-control p-md-3 bg-light" placeholder="Titulo" autofocus/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control p-md-3 bg-light" placeholder="Descripcion"></textarea>
        </div>
        <div class="form-group">
          <button class="btn bg-sesion btn-block " type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

